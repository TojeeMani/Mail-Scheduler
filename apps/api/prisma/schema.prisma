generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@localhost:5432/email_scheduler?schema=public"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  googleId      String?   @unique
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  emails        Email[]
}

enum EmailStatus {
  SCHEDULED
  SENT
  FAILED
}

model Email {
  id          String      @id @default(uuid())
  toEmail     String      @map("to_email")
  subject     String
  body        String      @db.Text
  senderId    String      @map("sender_id")
  sender      User        @relation(fields: [senderId], references: [id])
  scheduledAt DateTime    @map("scheduled_at")
  status      EmailStatus @default(SCHEDULED)
  sentAt      DateTime?   @map("sent_at")
  createdAt   DateTime    @default(now()) @map("created_at")

  // One-to-one relation with job tracking
  job         EmailJob?

  @@map("emails")
}

model EmailJob {
  id          String   @id @default(uuid())
  emailId     String   @unique @map("email_id")
  email       Email    @relation(fields: [emailId], references: [id])
  bullmqJobId String?  @map("bull_job_id")
  status      String   // Internal state (queued, active, etc.)
  createdAt   DateTime @default(now())

  @@map("email_jobs")
}
